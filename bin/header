#!/bin/python3

import argparse
import sys

def parser():
    parser = argparse.ArgumentParser(description='This script will add a header to a file')
    parser.add_argument('string',type=str , help='String to add to the header')
    return parser

def main():
    pars = parser()
    if len(sys.argv) != 2:
        # print help
        pars.print_help()
        sys.exit(1)
    for i in range(80):
        print('#', end='')
    print("")
    for i in range(80):
        if i == 0:
            print('#', end='')
        else:
            # print pars in the middle
            if i == int((80/2) - len(pars.parse_args().string)/2) :
                print(pars.parse_args().string, end='')
            print(' ', end='')
        if i == 78 - len(pars.parse_args().string):
            print('#', end='')
    print()
    for i in range(80):
        print('#', end='')
    print()
        
if __name__ == '__main__':
    main()
